{
  "name": "zodiac-wands",
  "version": "1.0.0",
  "private": true,
  "directories": {
    "test": "test"
  },
  "scripts": {
    "compile:cauldron": "solid-mustache ../svg/template.svg.hbs -o ./contracts/Cauldron.sol --name Cauldron --condense --dedupeThreshold=128",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat deploy --network",
    "coverage": "hardhat coverage",
    "verify": "hardhat run src/scripts/verify.ts --network",
    "lint": "yarn lint:sol && yarn lint:ts",
    "lint:sol": "solhint 'contracts/*.sol'",
    "lint:ts": "eslint --max-warnings 0 .",
    "fmt:sol": "prettier 'contracts/**/*.sol' -w",
    "fmt:ts": "prettier '(test|src)/**/*.ts' -w"
  },
  "repository": "git@github.com:gnosis/wand-nft.git",
  "license": "UNLICENSED",
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.1",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.3",
    "@types/chai": "4.2.14",
    "@types/google-spreadsheet": "^3.3.0",
    "@types/mocha": "8.2.0",
    "@types/node": "14.14.21",
    "@types/yargs": "16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "chai": "^4.3.6",
    "eslint": "8.21.0",
    "eslint-config-prettier": "8.0.0",
    "eslint-plugin-prettier": "4.2.1",
    "google-spreadsheet": "^3.3.0",
    "handlebars": "^4.7.7",
    "hardhat": "2.10.1",
    "hardhat-contract-sizer": "2.6.1",
    "hardhat-deploy": "0.11.12",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "2.7.1",
    "prettier-plugin-solidity": "1.0.0-dev.23",
    "solhint": "3.3.7",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-node": "10.9.1",
    "typechain": "^8.1.0",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.3.1",
    "argv": "^0.0.2",
    "base64-sol": "^1.1.0",
    "dotenv": "^8.0.0",
    "ethers": "^5.7.1",
    "merkletreejs": "^0.2.32",
    "solid-mustache": "^4.5.0"
  }
}
